import re
import sys

# import ClassInspector

# parser = optparse.OptionParser()
# (options, args) = parser.parse_args()

# The hardcore way...
# for arg in args:
# Load the class
# 	if '.py' in arg:
# 		arg = arg.replace('.pyc', '').replace('.py', '')
# 	myclass = __import__(arg) 
##  List its methods.
# 	print ClassInspector.getMethods(myclass)

args = sys.argv[1:]

# print args
count = 0
interesting_lines = ['TODO']
for arg in args:
  # print arg
  f = open(arg, 'r')
  lines = f.readlines()
  f.close()
  for line in lines:
    for mark in interesting_lines:
      if mark in line:
        print line.replace('\n', '')
        count += 1
print "Found %d TODO lines." % count
